@model List<Ders20.Models.Entities.Posts>

<h1>Posts</h1>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Content</th>
        <th>CreatedAt</th>
        <th>CreatedBy</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var post in Model)
    {
        <tr>
            <td>@post.Id</td>
            <td>@post.Title</td>
            <td>@post.Content</td>
            <td>@post.CreatedAt</td>
            <td>@post.CreatedBy</td>
            <td>
                <a asp-action="Update" asp-controller ="Post" asp-route-id="@post.Id" class="btn btn-info">Update</a>
                <a asp-action="Delete" asp-controller="Post" asp-route-id="@post.Id" class="btn btn-danger" onclick="return confirm('Are you sure ?')">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Post" class="btn btn-primary">Create New Post</a>